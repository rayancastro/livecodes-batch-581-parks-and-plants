<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h2 class="text-center">Add plant</h2>
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit "Create Plant", class: 'btn btn-primary' %>
      <% end %>

    </div>
  </div>
</div>

